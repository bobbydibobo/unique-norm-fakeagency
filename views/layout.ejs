<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Unna:ital@1&display=swap" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,200;0,300;0,400;1,100;1,200;1,300&display=swap" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400&display=swap" rel="stylesheet"> 
    <title>unique|norm</title>
</head>

<body>
    <%- body %> 
    <%- include ('./partials/footer'); %>

    <script>

        //LIGHTMODE
        const navigation = document.querySelector('.desktopMenu');
        const about = document.querySelector('.aboutUs');
        const customers = document.querySelector('.customers');
        const footer = document.querySelector('footer');
        const offers = document.querySelector('.offers');
        const text = document.querySelectorAll('p');
        const logo = document.querySelector('.brandLogo');
        const btn = document.querySelectorAll('button');

        const modeSwitch = document.querySelector('.mode');

        const modeSwitchArray = [navigation, about, customers, footer, offers];

        let lightMode = false;

        modeSwitch.addEventListener('click', () =>{
            modeSwitchArray.forEach(section => {
                if(section === navigation) {
                    lightMode ? navigation.style.backgroundColor = "#2e2e2e" : navigation.style.backgroundColor = "#dfdfdf"; 
                } else {
                    section.classList.toggle('lightModeBackground');
                }
            });

            if(lightMode){
                    for(let i = 0; i < text.length; i++){
                    text[i].style.color = "whitesmoke";
                    } 
                    logo.style.color = "whitesmoke";

                    lightMode = false;
                } else {
                    for(let i = 0; i < text.length; i++){
                    text[i].style.color = "#2e2e2e";
                    }
                    logo.style.color = "#2e2e2e";

                    lightMode = true;
                }
        });

        //BURGER MENU
        const openMenuBtn = document.querySelector('.openMenu');
        const closeMenuBtn = document.querySelector('.closeMenu');
        const mobileNav = document.querySelector('.mobileNav');

        openMenuBtn.addEventListener('click', () =>{
            mobileNav.style.display = "block";
        });

        closeMenuBtn.addEventListener('click', () => {
            mobileNav.style.display = "none";
        });

    </script>
</body>

</html>